{
    "files.eol": "\n",
    "files.exclude": {
        "**/.git": true,
        "**/.bundle": true,
        "**/vendor": true,
        "**/_site": true
    },
    "markdown.extension.toc.githubCompatibility": true,
    "markdownlint.config": {
        "default": true,
        "MD001": false,
        "MD002": false,
        "MD003": {
            "style": "atx"
        },
        "MD007": {
            "indent": 4
        },
        "MD013": false,
        "MD025": false,
        "MD026": false,
        "MD033": {
            "allowed_elements": [
                "i",
                "script",
                "blockquote",
                "a",
                "p"
            ]
        },
        "MD041": false,
        "no-hard-tabs": false
    },
    "yaml.format.enable": true,
    "cSpell.words": [

    ],
}